@page "/fetchdata"
@using Aquilo.Common.interfaces;
@inject PluginProvider PluginProvider

<PageTitle>Plugins</PageTitle>

<h1>Execute The Plugins!</h1>

<p>This commponent demonstrates calling plugin code.</p>

@if (plugins == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <p><em>There are @plugins.Count plugins.</em></p>
    <table class="table">
        <thead>
            <tr>
                <th>Plugin Output</th>
            </tr>
        </thead>
    </table>
    <tbody>
        @foreach (var plugin in plugins)
        {
            <tr>
                <td>
                    @plugin.GetDataAsync().GetAwaiter().GetResult()
                </td>
            </tr>
        }
    </tbody>
}

@code {
    private IReadOnlyList<IPluginApi>? plugins;
    protected override async Task OnInitializedAsync()
    {
        await Task.Yield();
        plugins = PluginProvider.GetPlugins();
    }
}
